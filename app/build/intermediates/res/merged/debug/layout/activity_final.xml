<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wagner_e_nivaldo.listadecompras.FinalActivity">

    <EditText
        android:id="@+id/final_nomeprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Produto"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/final_quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Quantidade"
        android:inputType="number" />

    <Spinner
        android:id="@+id/final_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dip"/>

    <CheckBox
        android:id="@+id/final_perecivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Produto Perecível" />

    <Button
        android:id="@+id/final_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar à lista" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/final_nomelista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/final_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
